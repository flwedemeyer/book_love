<img alt="full screen background image" src="<%= asset_path 'typewriter.jpg' %>" id="full-screen-background-image" class="desaturate" />

<div class="center_me">
	<h2>Get your author love on.</h2>

	<%= form_for @author, html: { class: "pure-form pure-form-aligned"} do |f| %>
		<fieldset>
		        <div class="pure-control-group">
					<%= f.label :name %>
					<%= f.text_field :name %>
				</div>
				<div class="pure-control-group">	
					<%= f.label :image_url %>
					<%= f.text_field :image_url %>
				</div>	
					<%= f.submit class: "pure-button pure-button-primary" %>
	    </fieldset>
	<% end %> 
</div>   